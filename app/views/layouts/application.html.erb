<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/homepage/index">Tricksy</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if session[:user_id] %>
        <li class="nav-item"><%= link_to("Logged in as #{User.find(session[:user_id]).username}", current_user_path) %></li>
        <li class="nav-item"><%= link_to "Log Out", logout_path, method: :delete, data: { confirm: "Are you sure you want to Log Out?" } %></li>
      <% else %>
        <li class="nav-item"><%= link_to "Log In", github_login_path %></li>
      <% end %>
      <li class="nav-item"><%= link_to "Browse All Products", products_path %></li>
      <span class="nav-link">
      <li class="nav-item dropdown">
        <span class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Browse Products by Category
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="#">Clean</a>
          <a class="dropdown-item" href="#">Edible</a>
          <a class="dropdown-item" href="#">Messy</a>
          <a class="dropdown-item" href="#">NSFW</a>
          <a class="dropdown-item" href="#">SFW</a>
        </div>
      </li>
      </span>
      <span class="nav-link">
        <li class="nav-item">
          Shopping Cart
        </li>
      </span>
    </ul>
  </div>
  </nav>  

    <% if flash[:result_text] or flash[:messages] %>
      <section class="alert__container">
        <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
          <span><%= flash[:status].to_s == 'failure' ? 'A problem occurred: ' : '' %><%= flash[:result_text] %></span>
          <% if flash[:messages] %>
            <ul>
              <% flash [:messages].each do |name, problems| %>
                <% problems.each do |problem| %>
                  <li><%= name %>: <%= problem %></li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
      </section>
    <% end %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
