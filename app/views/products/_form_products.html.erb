    
<%= form_with model: @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :categories %>
  <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
 
  <%= f.label :stock %>
  <%= f.text_field :stock %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.submit "Submit" %>
<% end %>