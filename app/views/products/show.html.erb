<section>
  <h2><%= @product.name.upcase %></h2>
</section>

<section>
  <p>Stock: <%= @product.stock %></p>
  <p>Price: <%= @product.price %></p>
  <p><%= image_tag(@product.photo_url, :size => "300x300") %></p>
  <p>Description: <%=@product.description %></p>
  <p>Categories: <% @product.category_ids.each do |category| %> 
    <%= link_to category.category_ids, category_products_path(category.id)  %>
  <% end %></p>
  <p><%= render template: "orderitems/new" %></p>
</section>

<section>
    <h3>Reviews</h3>
    <p> Average rating:
      <% if @product.reviews.count == 0 %>
          No Reviews
      <%else%>
        <%= @product.average_rating.round(1) %>
      <%end%> </p>
    <section>
      <% if @current_merchant != @product.merchant %>
        <p><%= link_to "Write a Review", new_product_review_path(@product.id) %></p>
      <% end %>
    </section>
  <ul>
    <% @product.reviews.each do |review| %>
    <p>
      <li> Rating: <%= review.rating %> </li>
      <li>
        <%= review.description %> </li>
      </p>
      <% end %>
    </ul>
  </section>