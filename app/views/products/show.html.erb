<section>
  <h2><%= @product.name.upcase %></h2>
</section>

<section>
  <p>Stock: <%= @product.stock %></p>
  <p>Price: <%= @product.price %></p>
  <p><%= image_tag @product.photo_url :size => "300x300", alt:"#{@product.name}"%></p>
  <p>Description: <%=@product.description %></p>
  <p>Categories: <% @product.category_ids.each do |category| %> 
    <%= link_to category.category_name, category_products_path(category.id)  %>
  <% end %></p>
  <p><%= render template: "orderitems/new" %></p>
</section>
