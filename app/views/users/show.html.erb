<div class="back-color">
<section>
  <h2>User Summary: <%= @user.username %> </h2>
  <p> Became a merchant: <%= render_date @user.created_at %></p>
  <%= link_to "Home", root_path %>
  <br>
  </section>
  <section>
  <h3> Products </h3>
  <% products = Product.where(user_id: @user.id) %>
  <% if !products.nil? %>
    <% products.each do |product|%>
    <p><%= link_to image_tag(product.photo_url, :size => "300x300"), product_path(product.id) %></p>
    <p><%= product.name %></p>
    <% end %>
    <p><%= render template: "orderitems/_new" %></p>
  </section>
  <section>
    <p>Categories: 
      <% categories = Category.all %>
      <% categories.each do |category| %>
        <a class="dropdown-item"><%=link_to category.name, category_products_path(category.id), method: :get %> </a>
      <% end %>
    </section>
    <% else %>
    <section>
    User has no products.
    </section>
  <% end %>
</section>
</div>
