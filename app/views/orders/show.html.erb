<section>
  <h3>Order</h3>
</section>

<section>
  <ul>
    <% @order.orderitem_ids.each do |id| %>
      <% order_item = Orderitem.find_by(id: id)%>
      <% product = Product.find_by(id: order_item.product_id) %>
      <li>
        <%= product.name %>
        <%= product.price %>
        <%= order_item.quantity %> 
        <% if cookies[:order_id] %>
          <%= link_to "Edit", edit_orderitem_path(id) %>
          <%= link_to "Delete", orderitem_path(id), method: :delete %>
        <% end %>    
      </li>
    <% end %>
  </ul>
</section>

<section>
  <% if cookies[:order_id] %>
    <%= button_to "Check Out", edit_order_path(params[:id]), method: :get %>
  <% end %>
</section>
