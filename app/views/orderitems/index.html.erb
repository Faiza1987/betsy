<h2 >Order item index page</h2>

<ul>
<% @order_items.each do |order_item| %>
  <li><%= Product.find_by(id: order_item.product_id).name %></li>
  <li><%= Orderitem.find_by(id: order_item.id).quantity %></li>
  <li><%= link_to "Edit", edit_orderitem_path(order_item.id) %></li>
  <li><%= link_to "Remove", orderitem_path(@order_item.id), method: :delete, 
      data: {confirm: "Are you sure you want to remove this product from your order?"} %></li>
<% end %>
</ul>
