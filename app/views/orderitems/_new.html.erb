<% if params[:id] %>
  <%= form_with url: product_orderitems_path(params[:id]) do |f| %>
    <%= f.label :quantity %>
    <br>
    <%= f.text_field :quantity %>
    <br>
    <br>
    <%= f.submit "Add to Cart" %>
  <% end %>
<% end %>

<% if params[:product_id] %>
  <%= form_with url: product_orderitems_path(params[:product_id]) do |f| %>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
    <%= f.submit "Add to Cart" %>
  <% end %>
<% end %>
