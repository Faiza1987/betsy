<h1>Update order item</h1>

<%= form_with model: @order_item, class: "edit-orderitem" do |f| %>
  <%= f.hidden_field :product_id %>
  
  <%= f.label :product_id %>
  <%= text_field_tag "product_name", @product_name, readonly: true%>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.submit "Update Cart Item" %>
<% end %>
